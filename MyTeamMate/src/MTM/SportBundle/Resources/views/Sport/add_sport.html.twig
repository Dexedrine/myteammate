{% extends 'MTMSportBundle::base_sport.html.twig' %}


{% block div %}
	{% javascripts '../../public/js/addSlot.js' %}
		<link src="{{ asset_url }}" type="text/javascript" />
	{% endjavascripts %}
	
	<form action="{{ path('add_sport') }}" method="post" >
		<h3>Sport</h3>
	   	{{ form_widget(form.idsport) }}
	   	<h3>Lieu</h3>
		{{ form_widget(form.idplace) }}
		<h3>Niveau</h3>
		{{ form_widget(form.idlevel) }}
		<h3>Cr√©neaux</h3>
		<ul class="slots" data-prototype="{{ form_widget(form.idslots.vars.prototype)|e }}" >
    		{% for slot in form.idslots  %}	
	         	<li>{{ form_widget(slot) }}</li>
	    	{% endfor %}
		</ul>
		{{ form_rest(form) }}
	    <input type="submit" />
	</form>		
	
{% endblock %}


