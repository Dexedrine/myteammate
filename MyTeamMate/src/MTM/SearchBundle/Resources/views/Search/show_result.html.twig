{% extends 'MTMCoreBundle::connect.html.twig' %}
{% block page_name %}Search{% endblock %}

{% block body %}
		{%  for line in  result %}			
			<div class="box" id="{{ line.id }}" draggable="true">
				<a class="result" href="{{ path('others_profile',{"id" : line.id}) }}" >
					<span class="bold">{{ line.username }}</span> <br>					
					{{ line.profile.firstname }} {{ line.profile.name}}  <br>	
					{% for practice in line.practices %}		
						{{ practice.idsport.nomsport }} <br>
					{% endfor %}
					
				</a>
				<a class="box_button" href="{{ path('others_profile',{"id" : line.id}) }}" >
						<img class="box_button" href="{{ path('others_profile',{"id" : line.id}) }}" src="{{ line.profile.urlphoto }}"/>					
				</a>
			</div>
		{% endfor %}
		<div class="clear"></div>
		<div class="button_cancel">
				<a  href="{{ path('search')}}" value="Research"> Refaire une recherche </a>
		</div>
		
{% endblock %}