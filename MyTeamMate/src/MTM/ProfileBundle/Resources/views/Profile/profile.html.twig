{% extends 'MTMProfileBundle:Profile:base_profile.html.twig' %}

{% block page_name %}Profil{% endblock %}
{% block body %}

	<div class="personnal_info">
		<span> {{ firstname }} </span>
		<span> {{ name }} </span>
		<span class="description"> {{ description }}</span>
	
		<div class="picture">
		{% if picture %}
			<a href="{{ path('choose_picture') }}"><img alt="photo" src="{{ picture }}"/></a>
		{% else %}
			<img alt="photo" src="{{ asset('bundles/mtmdesign/img/anonymous.jpg') }}">
			<div><a href="{{ path('choose_picture') }}">Vous n'avez pas encore d'image de profil, en choisir une?</a></div>
		{% endif %}
		</div>
		
	</div>
	<div class="clear"></div>
	
	<div class="tiles">
		<div class="tile">
			<a href="{{ path('sport') }}" >
				<img alt="Sports" src="{{ asset('bundles/mtmdesign/img/sports.png') }}">
			</a>
		</div>
		<div class="tile">
			<a href="{{ path('fos_message_inbox') }}"  >
				<img alt="Messages" src="{{ asset('bundles/mtmdesign/img/msg.png') }}">
			</a>
		</div>
		<div class="clear"></div>
		<div class="tile">
			<a href="{{ path('fos_comment_new_threads') }}" >
				<img alt="Commentaires" src="{{ asset('bundles/mtmdesign/img/comm.png') }}">
			</a>
		</div>
		<div class="tile">
			<a>
				<img alt="Favoris" src="{{ asset('bundles/mtmdesign/img/favoris.png') }}">
			</a>
		</div>
	</div>
{% endblock %}
