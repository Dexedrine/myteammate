<div class="messagesTable">

<table>

    <thead>
        <tr>
            <th colspan="3"> <br> </th>
        </tr>
    </thead>

     <tbody>

    {% if threads %}
        {% for thread in threads %}
            <tr>
                <td>
                    <img src="{{ thread.getParticipants()[0].getProfile().getUrlphoto()}}" alt="{{thread.getParticipants()[0]  }}"/>
                </td>
                <td>
                	{{ thread.getParticipants()[0].getProfile().getFirstname()}}
                    {{ thread.getParticipants()[0].getProfile().getName()}}
                    <br><a href="{{ url('fos_message_thread_view', {'threadId': thread.id}) }}">
                    {{ thread.subject }}
                    </a>

                    <br>{% if not fos_message_is_read(thread) %}
                        ({% trans from 'FOSMessageBundle' %}new{% endtrans %})
                    {% endif %}
                    le {{ thread.createdAt|date }}
                </td>
                <td>
                	<div class="messageForm">
                    <form action="{{ url('fos_message_thread_delete', {'threadId': thread.id}) }}" method="post">
                    	<div >	 	   
	 	   					<div class="deleteMessageSubmit" onclick="document.forms['messageForm'].submit()">
		 	   					
		 	   						<input type="submit" value="Supprimer"/>
		 	   						<br><span class="icon" data-icon="&#xe008;" aria-hidden="true" title="supprimer"></span> 
	 	   					</div>
						</div>
                    </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
    {% else %}
        <tr>
            <td colspan="6">
		 	   	Pas de message
            </td>
        </tr>
    {% endif %}

    </tbody>

</table>
</div>